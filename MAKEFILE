release: MAIN.ASM VIDEO.OBJ RAND.OBJ KEYB.OBJ
	ML /W3 /WX VIDEO.OBJ RAND.OBJ KEYB.OBJ MAIN.ASM /Fe MAIN.EXE

debug: MAIN.ASM VIDEOD.OBJ RANDD.OBJ KEYBD.OBJ
	ML /Zi /W3 /WX VIDEOD.OBJ RANDD.OBJ KEYBD.OBJ MAIN.ASM /Fe MAIND.EXE

VIDEO.OBJ: VIDEO.ASM
	ML /c /W3 /WX /FoVIDEO.OBJ /Ta VIDEO.ASM
	
VIDEOD.OBJ: VIDEO.ASM
	ML /c /Zi /W3 /WX /FoVIDEOD.OBJ /Ta VIDEO.ASM
	
RAND.OBJ: RAND.ASM
	ML /c /W3 /WX /FoRAND.OBJ /Ta RAND.ASM
	
RANDD.OBJ: RAND.ASM
	ML /c /Zi /W3 /WX /FoRANDD.OBJ /Ta RAND.ASM
	
KEYB.OBJ: KEYB.ASM
	ML /c /W3 /WX /FoKEYB.OBJ /Ta KEYB.ASM
	
KEYBD.OBJ: KEYB.ASM
	ML /c /Zi /W3 /WX /FoKEYBD.OBJ /Ta KEYB.ASM

clean:
	del *.EXE
	del *.OBJ

cv: debug
	cv /s /43 MAIND.EXE
